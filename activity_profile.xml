<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAF6"
    tools:context="com.js.firebaseauthentication.ProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher_account" />

            <TextView
                android:id="@+id/textviewUserEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:text="" />


            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="로그아웃" />

            <TextView
                android:id="@+id/textviewDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:text="회원탈퇴 합니다."
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="397dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton_home"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src="@drawable/notice_24dp" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>